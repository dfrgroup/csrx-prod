{
  "name": "csrx",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac --win --linux",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "publish": "electron-builder --mac --win --linux --publish always",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": {
    "name": "DFR Group",
    "email": "anthony@dfrgrp.com"
  },
  "license": "ISC",
  "description": "Electron app displaying OS info with auto-update",
  "repository": {
    "type": "git",
    "url": "https://github.com/dfrgroup/csrx-prod.git"
  },
  "build": {
    "appId": "com.csrx.app",
    "productName": "CSRX",
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "splash.html",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "build/icon.png"
    },
    "publish": {
      "provider": "github",
      "owner": "dfrgroup",
      "repo": "csrx-prod",
      "releaseType": "release"
    }
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12"
  }
}
